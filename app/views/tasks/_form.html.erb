<%= form_with(model: @task) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <p><%= f.select :status, Task::STATUS_OPTIONS, class: 'form-control' %></p>
  </div>

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-primary' %> or <%= link_to 'back', :back %>
  </div>
<% end %>
