<% errors = model.errors %>  

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      <h2>Please fix <%= pluralize(errors.count, "error") %></h2>
    </div>

    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 
